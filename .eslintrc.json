{
  "root": true,
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["plugin:prettier/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": ["tsconfig.json", "tsconfig.dev.json"],
    "sourceType": "module"
  },
  "ignorePatterns": ["/lib/**/*"],
  "plugins": ["@typescript-eslint", "import"],
  "rules": {
    "prettier/prettier": "warn"
  }
}
